<div class="container mt-5">
  <h2><%= @restaurant.name %></h2>
  <h4><%= "Category: #{@restaurant.category.capitalize}" %></h4>
  <p><%= "Address: #{@restaurant.address} and contact here: #{@restaurant.phone_number}" %></p>
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>
  <br>
  <%= link_to "Back to restaurants", restaurants_path %>
</div>
